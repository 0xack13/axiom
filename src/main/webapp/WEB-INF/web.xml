    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

  <context-param>
    <param-name>version</param-name>
    <param-value>1.2-BETA</param-value> <!-- TODO: make this dynamic from pom.xml !  -->
  </context-param>
  
  <context-param>
    <param-name>keystoreFile</param-name>
    <param-value>/WEB-INF/config/AxiomIdpExample.keystore</param-value>
  </context-param>
  <context-param>
    <param-name>keystoreAlias</param-name>
    <param-value>axiom</param-value>
  </context-param>
  <context-param>
    <param-name>keystorePassword</param-name>
    <param-value>123456</param-value>
  </context-param>
  <context-param>
    <param-name>keystoreAliasPassword</param-name>
    <param-value>123456</param-value>
  </context-param>

</web-app>
